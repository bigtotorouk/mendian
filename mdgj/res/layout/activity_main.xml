<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
	<View android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#bbb"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
         >

        <TextView
            android:id="@+id/radio_button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/menu_tab"
            android:drawableTop="@drawable/nav_sales"
            android:text="销售"
           />

        <TextView
            android:id="@+id/radio_button1"
            style="@style/menu_tab" 
            android:drawableTop="@drawable/nav_purchase"
            android:text="采购" />

        <TextView
            android:id="@+id/radio_button2"
            style="@style/menu_tab"
            android:drawableTop="@drawable/nav_inventory"
            android:text="仓库"  />

        <TextView
            android:id="@+id/radio_button3"
            style="@style/menu_tab"
            android:drawableTop="@drawable/nav_business"
            android:text="记账"  />

        <TextView
            android:id="@+id/radio_button4"
            style="@style/menu_tab"
            android:drawableTop="@drawable/nav_account"
            android:text="商圈"  />
        <TextView
            android:id="@+id/radio_button5"
            style="@style/menu_tab"
            android:drawableTop="@drawable/nav_more"
            android:text="更多"  />
    </LinearLayout>

</LinearLayout>
